// tsconfig.test.json
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "jsx": "react"
    },
    "include": ["src/**/*.spec.ts", "src/**/*.spec.tsx", "tests/**/*.ts", "tests/**/*.tsx", "__mocks__/*", "src/*"],
    "exclude": ["node_modules"]
}